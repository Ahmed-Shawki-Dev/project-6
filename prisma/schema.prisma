datasource db {
provider = "mongodb"
url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id     String   @id @db.ObjectId @map("_id") @default(auto())
  user_id String
  title  String
  body String?
  createdAt DateTime @default(now())
  completed Boolean @default(false)
}


